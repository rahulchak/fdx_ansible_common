JAVA_BIN=`which java`
if [ -z "$ZC_PATH" ]; then
    ZC_BASEDIR=`dirname "$0"`
    ZC_BASEDIR=`cd "$ZC_BASEDIR" && pwd`
    ZC_PATH="$ZC_BASEDIR/zoocreeper-1.0-SNAPSHOT.jar"
fi

if [ ! -f "$ZC_PATH" ]; then
    echo "Distribution not found: $ZC_PATH" >&2
    exit 1
fi

param2="$2"

# echo "$param2"
# echo $param2
# 
# if [ $param2 == "unsecure" ]; then 
#   echo "test"
# fi 
# exit 1

case "$1" in
    dump)
        shift 2
        if [ $param2  = "unsecure" ]; then 
          exec $JAVA_BIN -cp $ZC_PATH com.boundary.zoocreeper.Backup "$@"
        else
          #exec $JAVA_BIN -Djava.security.auth.login.config=/Users/CHAKRAH/Personal/git/zoocreeper/client.conf -cp $ZC_PATH com.boundary.zoocreeper.Backup "$@"
          exec $JAVA_BIN -Djava.security.auth.login.config=$param2 -cp $ZC_PATH com.boundary.zoocreeper.Backup "$@"
        fi 
        ;;
    load)
        shift 2
        if [ $param2  = "unsecure" ]; then 
          exec $JAVA_BIN -cp $ZC_PATH com.boundary.zoocreeper.Restore "$@"
        else
          exec $JAVA_BIN -Djava.security.auth.login.config=$param2 $ZC_PATH com.boundary.zoocreeper.Restore "$@"
        fi 
        ;;
    *)
        echo "Usage: $0 {dump|load}" >&2
        exit 1
esac
